<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_dialog_bg">

    <LinearLayout
        android:id="@+id/rl_content"
        style="@style/dialog_panel"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_centerInParent="true"
        android:layout_margin="55dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/dialog_error_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:visibility="gone"
                android:id="@+id/dialog_title_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-13dp"
                android:gravity="center_horizontal"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/dialog_msg"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="8dp"

                android:gravity="center_horizontal"
                android:textColor="#646464" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/light_gray" />

        <LinearLayout
            android:id="@+id/dialog_button_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/tabTextColor_red"
                android:textSize="16sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/dialog_cancle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#646464"
                android:textSize="16sp" />


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>